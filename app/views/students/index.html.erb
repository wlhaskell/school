<p id="notice"><%= notice %></p>

<h1>Our Great Students!</h1>

<ul class="nav nav-pills" role="tablist">
  <li><%= link_to "All Grades" %></li>
  <% 5.times do |grade| %>
    <li><%= link_to "Grade " + (grade+1).to_s, students_path(grade: grade+1) %></li>
  <% end %>
</ul>

<div class = "row">
    <% @students.each do |student| %>
      <div class = "col-md-4">
        <div class = "well">
          <h2><%= student.name %></h2>
          <h4>
            <%= student.teacher %>'s <%= student.grade %><sup><% if student.grade > 3 %><%="th" %><%elsif student.grade == 3 %><%="rd" %><%elsif student.grade == 2 %><%="nd" %><%elsif student.grade == 1 %><%="st" %><% end %></sup> Grade Class
          </h4>
          <p><%= student.bio %></p>
          <p>
            <%= link_to 'Show', student %>
            <%= link_to 'Edit', edit_student_path(student) %>
            <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        </div>
      </div>
    <% end %>
</div>

<%= link_to 'New Student', new_student_path %>
